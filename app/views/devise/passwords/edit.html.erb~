  		</div>
  		<div class="small-9 columns">
  			<%= f.password_field :password, :autofocus => true, :id => "right-label" %>
  		</div>
  		
  		<div class="small-3 columns">
  			<%= f.label :password_confirmation, "Confirm new password", :for => "right-label", :class => "right inline" %>
  		</div>
  		<div class="small-9 columns">
  			<%= f.password_field :password_confirmation, :id => "right-label" %>
  		</div>

